#create class
class Vehicle:

    # create init method
    def __init__(self, max_speed, mileage):
        #bind the arguements
            self.max_speed = max_speed
            self.mileage = mileage
            
modelX = Vehicle(240, 18)

print("Model Max Speed:", modelX.max_speed)
print("Model Mileage:", modelX.mileage)

class fruit:
    taste = 'bitter'

    def __init__(self,name,color):
        self.name = name
        self.color = color
      
gooseberry = fruit('Gooseberry','Green')
Hog_plum = fruit('Hog plum','light green')

print(gooseberry.taste)
print(gooseberry.name, gooseberry.color)
print(Hog_plum.name, Hog_plum.color)
